@model MyWatchList.Models.WatchItem

@{
    ViewData["Title"] = "Delete Item";
}

<div class="container mt-4">
    <h1>Delete Item</h1>

    <h3>Are you sure you want to delete this item?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Type)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Type)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsWatched)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsWatched)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.WatchDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.WatchDate)
            </dd>
        </dl>

        <form asp-action="Delete" data-confirm="Are you sure you want to delete this item?">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 